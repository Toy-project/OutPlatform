{
  "name": "outplatform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_PATH=src node scripts/start.js",
    "product" : "pm2 start ecosystem.json",
    "build": "cross-env NODE_PATH=src node scripts/build.js",
    "test": "CI=true node scripts/test.js --env=jsdom"
  },
  "dependencies": {
    "autoprefixer": "7.1.2",
    "axios": "^0.17.1",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.1",
    "babel-preset-react-app": "^3.0.3",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "classnames": "^2.2.5",
    "cors": "^2.8.4",
    "cross-env": "^5.1.3",
    "css-loader": "0.28.4",
    "dateformat": "^3.0.2",
    "dotenv": "4.0.0",
    "eslint": "4.4.1",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.35.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.1.0",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "jwt-decode": "^2.2.0",
    "materialize-css": "^0.100.2",
    "nexmo": "^2.2.0",
    "node-sass": "^4.7.2",
    "nodemailer": "^4.6.2",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.6",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react": "^16.2.0",
    "react-addons-css-transition-group": "^15.6.2",
    "react-addons-update": "^15.6.2",
    "react-cropper": "^1.0.1",
    "react-css-transition": "^0.7.4",
    "react-dev-utils": "^4.1.0",
    "react-dom": "^16.2.0",
    "react-infinite-scroll-component": "^3.0.2",
    "react-js-pagination": "^3.0.1",
    "react-rating": "^1.0.4",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-enter": "^0.2.1",
    "react-scroll-to-element": "^0.2.0",
    "react-slick": "^0.18.1",
    "react-spinners": "^0.2.6",
    "redux": "^3.7.2",
    "redux-react-router": "^1.0.0-beta3",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "0.18.2",
    "sw-precache-webpack-plugin": "0.11.4",
    "twilio": "^3.11.3",
    "url-loader": "0.5.9",
    "webpack": "3.5.1",
    "webpack-dev-server": "2.8.2",
    "webpack-manifest-plugin": "1.2.1",
    "whatwg-fetch": "2.0.3"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
